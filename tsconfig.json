{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "compiled",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "types": ["node", "webdriverio/sync", "@wdio/jasmine-framework"]
  },
  "include": ["./tests/*.ts", "./config/*.ts", "./pages/*.ts"],
  "exclude": ["node_modules"]
}
